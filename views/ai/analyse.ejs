  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-blue: #1a73e8;
      --primary-blue-dark: #1557b0;
      --primary-blue-light: #4285f4;
      --success-green: #34a853;
      --success-green-dark: #2d9346;
      --warning-orange: #fbbc04;
      --warning-orange-dark: #ea9902;
      --error-red: #ea4335;
      --error-red-dark: #d33b2c;
      --purple: #9c27b0;
      --purple-dark: #7b1fa2;
      
      --text-primary: #202124;
      --text-secondary: #5f6368;
      --text-tertiary: #80868b;
      --border-light: #e8eaed;
      --border-medium: #dadce0;
      --surface: #ffffff;
      --surface-variant: #f8f9fa;
      --surface-elevated: #ffffff;
      
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      
      --transition-fast: 150ms ease;
      --transition-base: 200ms ease;
      --transition-slow: 300ms ease;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'SF Pro Display', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background-color: var(--surface-variant);
      color: var(--text-primary);
      line-height: 1.5;
      margin: 0;
      padding: 0;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Professional Navbar - Google/Apple Style */
    .navbar {
      background-color: var(--surface);
      border-bottom: 1px solid var(--border-light);
      padding: 0.75rem 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      backdrop-filter: saturate(180%) blur(20px);
    }

    .navbar-brand {
      color: var(--text-primary) !important;
      font-weight: 600;
      font-size: 1.375rem;
      letter-spacing: -0.02em;
    }

    .nav-link {
      color: var(--text-secondary) !important;
      font-weight: 500;
      font-size: 0.9rem;
      padding: 0.5rem 1rem !important;
      border-radius: var(--radius-sm);
      transition: var(--transition-base);
      margin: 0 0.125rem;
    }

    .nav-link:hover {
      color: var(--primary-blue) !important;
      background-color: rgba(26, 115, 232, 0.08);
    }

    .nav-link.active {
      color: var(--primary-blue) !important;
      background-color: rgba(26, 115, 232, 0.12);
      font-weight: 600;
    }

    .navbar-toggler {
      border: none;
      padding: 0.5rem;
      border-radius: var(--radius-sm);
    }

    .navbar-toggler:focus {
      box-shadow: none;
    }

    /* Clean Carousel - Medical Grade */
    .carousel {
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-md);
      margin-bottom: 2rem;
      background: var(--surface);
    }

    .carousel-item img {
      width: 100%;
      height: 320px;
      object-fit: cover;
      filter: brightness(0.9) saturate(0.9);
    }

    .carousel-control-prev,
    .carousel-control-next {
      width: 4%;
      opacity: 0.7;
      transition: var(--transition-base);
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
      opacity: 1;
    }

    .carousel-indicators button {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      border: none;
      background-color: rgba(255, 255, 255, 0.5);
      transition: var(--transition-base);
    }

    .carousel-indicators button.active {
      background-color: var(--surface);
      transform: scale(1.2);
    }

    /* Main Container - Apple/Google Style */
    .main-container {
      background: var(--surface);
      border-radius: var(--radius-lg);
      margin: 1.5rem auto;
      padding: 2rem;
      box-shadow: var(--shadow-sm);
      border: 1px solid var(--border-light);
    }

    /* Typography - System Font Stack */
    .page-title {
      font-size: 2.25rem;
      font-weight: 600;
      color: var(--text-primary);
      text-align: center;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
    }

    .page-subtitle {
      font-size: 1.125rem;
      color: var(--text-secondary);
      text-align: center;
      max-width: 640px;
      margin: 0 auto 2.5rem;
      font-weight: 400;
      line-height: 1.6;
    }

    /* Health Cards - Professional Medical Style */
    .health-analysis-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .health-card {
      background: var(--surface);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-md);
      padding: 1.5rem;
      transition: var(--transition-slow);
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .health-card:hover {
      border-color: var(--border-medium);
      box-shadow: var(--shadow-lg);
      transform: translateY(-2px);
    }

    .health-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      transition: var(--transition-base);
    }

    .health-card.symptoms::before { background: var(--primary-blue); }
    .health-card.reports::before { background: var(--success-green); }
    .health-card.heart::before { background: var(--error-red); }
    .health-card.diabetes::before { background: var(--warning-orange); }

    .card-icon-wrapper {
      width: 48px;
      height: 48px;
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
      transition: var(--transition-base);
    }

    .symptoms .card-icon-wrapper {
      background: rgba(26, 115, 232, 0.1);
      color: var(--primary-blue);
    }

    .reports .card-icon-wrapper {
      background: rgba(52, 168, 83, 0.1);
      color: var(--success-green);
    }

    .heart .card-icon-wrapper {
      background: rgba(234, 67, 53, 0.1);
      color: var(--error-red);
    }

    .diabetes .card-icon-wrapper {
      background: rgba(251, 188, 4, 0.1);
      color: var(--warning-orange);
    }

    .card-icon {
      font-size: 1.25rem;
    }

    .card-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
      line-height: 1.4;
    }

    .card-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
      line-height: 1.5;
      margin-bottom: 1.25rem;
    }

    /* Professional Buttons - Google/Apple Style */
    .health-btn {
      width: 100%;
      padding: 0.75rem 1rem;
      font-weight: 500;
      font-size: 0.875rem;
      border: 1px solid transparent;
      border-radius: var(--radius-sm);
      transition: var(--transition-base);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      text-decoration: none;
      position: relative;
      overflow: hidden;
    }

    .btn-symptoms {
      background: var(--primary-blue);
      color: white;
    }

    .btn-symptoms:hover {
      background: var(--primary-blue-dark);
      color: white;
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }

    .btn-reports {
      background: var(--success-green);
      color: white;
    }

    .btn-reports:hover {
      background: var(--success-green-dark);
      color: white;
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }

    .btn-heart {
      background: var(--error-red);
      color: white;
    }

    .btn-heart:hover {
      background: var(--error-red-dark);
      color: white;
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }

    .btn-diabetes {
      background: var(--warning-orange);
      color: var(--text-primary);
    }

    .btn-diabetes:hover {
      background: var(--warning-orange-dark);
      color: var(--text-primary);
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }

    /* Professional Alert/Disclaimer */
    .medical-disclaimer {
      background: var(--surface);
      border: 1px solid var(--border-light);
      border-left: 4px solid var(--primary-blue);
      border-radius: var(--radius-md);
      padding: 1.25rem 1.5rem;
      margin-top: 2.5rem;
      position: relative;
    }

    .disclaimer-title {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .disclaimer-content {
      font-size: 0.8125rem;
      color: var(--text-secondary);
      line-height: 1.5;
      margin: 0;
    }

    /* Professional Footer */
    .footer {
      background: var(--surface);
      border-top: 1px solid var(--border-light);
      padding: 1.5rem 0;
      margin-top: 3rem;
    }

    .footer-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.8125rem;
      color: var(--text-tertiary);
    }

    .footer-links {
      display: flex;
      gap: 1.5rem;
    }

    .footer-links a {
      color: var(--text-tertiary);
      text-decoration: none;
      transition: var(--transition-base);
    }

    .footer-links a:hover {
      color: var(--primary-blue);
    }

    /* Loading States */
    .btn-loading {
      pointer-events: none;
      opacity: 0.7;
    }

    .btn-loading .btn-text {
      opacity: 0;
    }

    .btn-loading .spinner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .spinner {
      width: 16px;
      height: 16px;
      border: 2px solid transparent;
      border-top: 2px solid currentColor;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-container {
        margin: 1rem;
        padding: 1.5rem;
        border-radius: var(--radius-md);
      }

      .page-title {
        font-size: 1.875rem;
      }

      .page-subtitle {
        font-size: 1rem;
