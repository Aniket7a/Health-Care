<!DOCTYPE html>
<html>
<head>
  <title>Hospital Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="container mt-4">
    <h2>Welcome, <%= hospital.name %>!</h2>
    <p>Email: <%= hospital.email %></p>
    <p>Total Patients Registered in System: <strong><%= patientCount %></strong></p>

    <hr>

    <!-- Doctor Management -->
    <h4>Doctors</h4>
    <form action="/hospital/doctors/add" method="POST" class="row g-2 mb-3">
      <div class="col-md-3">
        <input type="text" name="name" placeholder="Doctor Name" class="form-control" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="category" placeholder="Category" class="form-control" required>
      </div>
      <div class="col-md-2">
        <input type="email" name="email" placeholder="Doctor Email" class="form-control" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="slots" placeholder="OPD Slots (comma separated)" class="form-control" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="onlineSlots" placeholder="Online Slots (comma separated)" class="form-control" required>
      </div>
      <div class="col-12"><button class="btn btn-success">Add Doctor</button></div>
    </form>

    <table class="table table-striped mb-4">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Email</th>
          <th>OPD Slots</th>
          <th>Online Slots</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% hospital.doctors.forEach(doc => { %>
          <tr>
            <td><%= doc.name %></td>
            <td><%= doc.category %></td>
            <td><%= doc.email %></td>
            <td><%= doc.slots && doc.slots.length ? doc.slots.join(", ") : "N/A" %></td>
            <td><%= doc.onlineSlots && doc.onlineSlots.length ? doc.onlineSlots.join(", ") : "N/A" %></td>
            <td>
              <!-- Update Slots -->
              <form action="/hospital/doctors/<%= doc._id %>/edit" method="POST" class="d-flex flex-column gap-1">
                <input type="text" name="slots" value="<%= doc.slots ? doc.slots.join(', ') : '' %>" class="form-control form-control-sm" placeholder="Update OPD slots">
                <input type="text" name="onlineSlots" value="<%= doc.onlineSlots ? doc.onlineSlots.join(', ') : '' %>" class="form-control form-control-sm" placeholder="Update Online slots">
                <button class="btn btn-sm btn-primary mt-1">Update</button>
              </form>
              <!-- Remove Doctor -->
              <form action="/hospital/doctors/<%= doc._id %>/delete" method="POST" class="mt-1">
                <button class="btn btn-sm btn-danger">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <hr>

    <!-- Rooms -->
    <h4>Rooms</h4>
    <form action="/hospital/rooms/add" method="POST" class="row g-2 mb-3">
      <div class="col-md-6">
        <input type="text" name="type" placeholder="Room Type (ICU, Ward...)" class="form-control" required>
      </div>
      <div class="col-md-6">
        <input type="number" name="total" placeholder="Total Rooms" class="form-control" required>
      </div>
      <div class="col-12"><button class="btn btn-success">Add Room</button></div>
    </form>

    <table class="table table-bordered mb-4">
      <thead>
        <tr>
          <th>Type</th>
          <th>Total</th>
          <th>Available</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% hospital.rooms.forEach(room => { %>
          <tr>
            <td><%= room.type %></td>
            <td><%= room.total %></td>
            <td><%= room.available %></td>
            <td>
              <!-- Update Room -->
              <form action="/hospital/rooms/<%= room._id %>/update" method="POST" class="d-flex gap-2">
                <input type="number" name="total" value="<%= room.total %>" class="form-control form-control-sm" style="width:90px">
                <input type="number" name="available" value="<%= room.available %>" class="form-control form-control-sm" style="width:90px">
                <button class="btn btn-warning btn-sm">Update</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <hr>

    <!-- Ambulances -->
    <h4>Ambulances</h4>
    <form action="/hospital/ambulances/update" method="POST" class="row g-2 mb-3">
      <div class="col-md-4">
        <input type="number" name="count" value="<%= hospital.ambulances %>" class="form-control">
      </div>
      <div class="col-md-4">
        <button class="btn btn-success">Update Ambulances</button>
      </div>
    </form>

    <hr>

    <!-- New Section: Patient OPD Bookings -->
   
    <hr>

<h4>OPD Management</h4>
<div class="mb-3">
  <a href="/hospital/opd-bookings" class="btn btn-primary">
    <i class="fas fa-notes-medical"></i> View OPD Bookings
  </a>
</div>


  </div>
</body>
</html>
