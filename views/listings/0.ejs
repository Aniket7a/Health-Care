    <script>
        // Translation data
        const translations = {
            en: {
                'brand': 'AyuVaani',
                'find-doctors': 'Find Doctors',
                'book-appointment': 'Book Appointment',
                'emergency': 'Emergency Care',
                'verified': 'Verified',
                'reviews': 'reviews',
                'practice-location': 'Practice Location',
                'about-doctor': 'About the Doctor',
                'patient-feedback': 'Patient Feedback',
                'share-experience': 'Share Your Experience',
                'submit-review': 'Submit Review',
                'get-directions': 'Get Directions',
                'call': 'Call Now',
                'access-records': 'Access Records',
                'login': 'Login'
            },
            hi: {
                'brand': 'आयुवाणी',
                'find-doctors': 'डॉक्टर खोजें',
                'book-appointment': 'अपॉइंटमेंट बुक करें',
                'emergency': 'आपातकालीन देखभाल',
                'verified': 'सत्यापित',
                'reviews': 'समीक्षाएं',
                'practice-location': 'प्रैक्टिस स्थान',
                'about-doctor': 'डॉक्टर के बारे में',
                'patient-feedback': 'रोगी प्रतिक्रिया',
                'share-experience': 'अपना अनुभव साझा करें',
                'submit-review': 'समीक्षा जमा करें',
                'get-directions': 'दिशा निर्देश प्राप्त करें',
                'call': 'अभी कॉल करें',
                'access-records': 'रिकॉर्ड एक्सेस करें',
                'login': 'लॉग इन'
            },
            pa: {
                'brand': 'ਆਯੁਵਾਣੀ',
                'find-doctors': 'ਡਾਕਟਰ ਲੱਭੋ',
                'book-appointment': 'ਮੁਲਾਕਾਤ ਬੁੱਕ ਕਰੋ',
                'emergency': 'ਸੰਕਟਕਾਲੀਨ ਦੇਖਭਾਲ',
                'verified': 'ਪ੍ਰਮਾਣਿਤ',
                'reviews': 'ਸਮੀਖਿਆਵਾਂ',
                'practice-location': 'ਅਭਿਆਸ ਸਥਾਨ',
                'about-doctor': 'ਡਾਕਟਰ ਬਾਰੇ',
                'patient-feedback': 'ਮਰੀਜ਼ ਫੀਡਬੈਕ',
                'share-experience': 'ਆਪਣਾ ਤਜਰਬਾ ਸਾਂਝਾ ਕਰੋ',
                'submit-review': 'ਸਮੀਖਿਆ ਜਮ੍ਹਾਂ ਕਰੋ',
                'get-directions': 'ਦਿਸ਼ਾਵਾਂ ਪ੍ਰਾਪਤ ਕਰੋ',
                'call': 'ਹੁਣੇ ਕਾਲ ਕਰੋ',
                'access-records': 'ਰਿਕਾਰਡ ਐਕਸੈਸ ਕਰੋ',
                'login': 'ਲਾਗਇਨ'
            }
        };

        let currentLang = 'en';
        let isReading = false;
        let speechSynthesis = window.speechSynthesis;

        // Language switching
        function setLanguage(lang) {
            currentLang = lang;
            
            // Update language buttons
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
                btn.setAttribute('aria-pressed', 'false');
            });
            
            event.target.classList.add('active');
            event.target.setAttribute('aria-pressed', 'true');
            
            // Translate elements
            document.querySelectorAll('[data-translate]').forEach(element => {
                const key = element.getAttribute('data-translate');
                if (translations[lang] && translations[lang][key]) {
                    element.textContent = translations[lang][key];
                }
            });
        }

        // Read aloud functionality
        function toggleReadAloud() {
            if (isReading) {
                speechSynthesis.cancel();
                isReading = false;
                document.querySelector('.read-aloud-btn').innerHTML = 
                    '<i class="fas fa-volume-up"></i> Read Aloud';
            } else {
                readPageContent();
            }
        }

        function readPageContent() {
            const content = document.querySelector('#main-content');
            const textToRead = extractTextContent(content);
            
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(textToRead);
                utterance.lang = currentLang === 'hi' ? 'hi-IN' : 
                                currentLang === 'pa' ? 'pa-IN' : 'en-IN';
                utterance.rate = 0.8;
                utterance.pitch = 1;
                
                utterance.onstart = () => {
                    isReading = true;
                    document.querySelector('.read-aloud-btn').innerHTML = 
                        '<i class="fas fa-pause"></i> Stop Reading';
                };
                
                utterance.onend = () => {
                    isReading = false;
                    document.querySelector('.read-aloud-btn').innerHTML = 
                        '<i class="fas fa-volume-up"></i> Read Aloud';
                };
                
                speechSynthesis.speak(utterance);
            } else {
                alert('Sorry, your browser does not support text-to-speech functionality.');
            }
        }

        function extractTextContent(element) {
            // Extract meaningful text, excluding navigation and footer
            const excludeSelectors = ['.navbar', '.footer', '.btn', 'button', '.read-aloud-btn'];
            let text = '';
            
            function walkNodes(node) {
                if (node.nodeType === Node.TEXT_NODE) {
                    text += node.textContent.trim() + ' ';
                } else if (node.nodeType === Node.ELEMENT_NODE) {
                    const tagName = node.tagName.toLowerCase();
                    const isExcluded = excludeSelectors.some(selector => 
                        node.matches && node.matches(selector));
                    
                    if (!isExcluded && !['script', 'style'].includes(tagName)) {
                        for (let child of node.childNodes) {
                            walkNodes(child);
                        }
                        
                        // Add pauses for structural elements
                        if (['h1', 'h2', 'h3', 'p', 'div'].includes(tagName)) {
                            text += '. ';
                        }
                    }
                }
            }
            
            walkNodes(element);
            return text.replace(/\s+/g, ' ').trim();
        }

        // Form validation
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            });
        })();

        // Initialize map
        document.addEventListener('DOMContentLoaded', function() {
            const lat = <%= listing.lat || 28.6139 %>;
            const lng = <%= listing.lng || 77.2090 %>;

            const map = L.map('map', {
                keyboard: true,
                scrollWheelZoom: false
            }).setView([lat, lng], 15);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            const marker = L.marker([lat, lng]).addTo(map);
            marker.bindPopup("<%= listing.title %>");
            
            // Improve accessibility for map
            map.getContainer().setAttribute('tabindex', '0');
            map.getContainer().setAttribute('role', 'img');
            map.getContainer().setAttribute('aria-label', 'Interactive map showing doctor location');
        });

        // Keyboard navigation improvements
        document.addEventListener('keydown', function(e) {
            // Escape key to stop reading
            if (e.key === 'Escape' && isReading) {
                toggleReadAloud();
            }
        });

        // Focus management for better accessibility
        document.addEventListener('DOMContentLoaded', function() {
            // Skip to main content functionality
            const skipLink = document.querySelector('.skip-link');
            if (skipLink) {
                skipLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    const mainContent = document.querySelector('#main-content');
                    mainContent.focus();
                    mainContent.scrollIntoView();
                });
            }
            
            // Enhance form accessibility
            const ratingInputs = document.querySelectorAll('input[name="review[rating]"]');
            ratingInputs.forEach((input, index) => {
                input.addEventListener('change', function() {
                    const labels = ['Poor', 'Fair', 'Good', 'Very Good', 'Excellent'];
                    const announcement = `Rating selected: ${this.value} out of 5 stars - ${labels[index]}`;
                    announceToScreenReader(announcement);
                });
            });
        });

        function announceToScreenReader(message) {
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'polite');
            announcement.setAttribute('aria-atomic', 'true');
            announcement.className = 'sr-only';
            announcement.textContent = message;
            
            document.body.appendChild(announcement);
            
            setTimeout(() => {
                document.body.removeChild(announcement);
            }, 1000);
        }
    </script>

