                selector: '.medicine-portal',
                title: { en: 'Medicine Portal', hi: 'दवा पोर्टल', pa: 'ਦਵਾਈ ਪੋਰਟਲ' },
                description: { en: 'Find medicines at nearby pharmacies', hi: 'नजदीकी फार्मेसियों में दवाएं खोजें', pa: 'ਨਜ਼ਦੀਕੀ ਫਾਰਮੇਸੀਆਂ ਵਿੱਚ ਦਵਾਈਆਂ ਲੱਭੋ' }
            }
        ];

        function startGuidedTour() {
            tourStep = 0;
            document.getElementById('tourOverlay').style.display = 'block';
            showTourStep();
        }

        function showTourStep() {
            if (tourStep >= tourSteps.length) {
                endTour();
                return;
            }

            const step = tourSteps[tourStep];
            const element = document.querySelector(step.selector);
            const tooltip = document.getElementById('tourTooltip');

            if (element) {
                // Position spotlight
                const rect = element.getBoundingClientRect();
                
                // Update tooltip content
                const title = step.title[currentLanguage] || step.title.en;
                const description = step.description[currentLanguage] || step.description.en;
                
                tooltip.querySelector('.tour-title').textContent = title;
                tooltip.querySelector('.tour-description').textContent = description;
                
                // Position tooltip
                tooltip.style.top = (rect.bottom + 20) + 'px';
                tooltip.style.left = Math.max(20, rect.left) + 'px';
                
                // Scroll to element
                element.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        function nextTourStep() {
            tourStep++;
            showTourStep();
        }

        function prevTourStep() {
            if (tourStep > 0) {
                tourStep--;
                showTourStep();
            }
        }

        function endTour() {
            document.getElementById('tourOverlay').style.display = 'none';
            tourStep = 0;
            announceToScreenReader('Guided tour ended');
