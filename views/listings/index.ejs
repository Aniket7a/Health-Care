    <script>
        // Enhanced Accessibility Functions
        let highContrastMode = false;
        let currentFontSize = 16;
        let currentLanguage = 'en';
        let speechSynthesis = window.speechSynthesis;
        let isReading = false;
        let isListening = false;
        let tourStep = 0;

        // Language Management
        function setLanguage(lang) {
            currentLanguage = lang;
            document.body.setAttribute('data-lang', lang);
            
            // Update active language button
            document.querySelectorAll('.lang-toggle').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-lang="${lang}"]`).classList.add('active');
            
            // Store preference
            try {
                const userPrefs = { language: lang, fontSizeAdjustment: currentFontSize - 16 };
                announceToScreenReader(`Language changed to ${getLanguageName(lang)}`);
            } catch (e) {
                console.log('Language preference saved in session');
            }
        }

        function getLanguageName(lang) {
            const names = {
                'en': 'English',
                'hi': 'Hindi',
                'pa': 'Punjabi'
            };
            return names[lang] || 'English';
        }

        // Enhanced Accessibility Functions
        function toggleHighContrast() {
            highContrastMode = !highContrastMode;
            document.body.classList.toggle('high-contrast', highContrastMode);
            
            const btn = event.target.closest('.accessibility-btn');
            btn.classList.toggle('active', highContrastMode);
            
            const announcement = highContrastMode ? 'High contrast mode enabled' : 'High contrast mode disabled';
            announceToScreenReader(announcement);
        }

        function increaseFontSize() {
            if (currentFontSize < 24) {
                currentFontSize += 2;
                document.documentElement.style.fontSize = currentFontSize + 'px';
                announceToScreenReader(`Font size increased to ${currentFontSize} pixels`);
            }
        }

        function decreaseFontSize() {
            if (currentFontSize > 12) {
                currentFontSize -= 2;
                document.documentElement.style.fontSize = currentFontSize + 'px';
                announceToScreenReader(`Font size decreased to ${currentFontSize} pixels`);
            }
        }

        // Text-to-Speech Functions
        function toggleReadAloud() {
            if (isReading) {
                speechSynthesis.cancel();
                isReading = false;
                document.querySelector('.read-aloud-btn').innerHTML = `
                    <i class="fas fa-volume-up"></i>
                    <span class="lang-en">Read Aloud</span>
                    <span class="lang-hi">पढ़कर सुनाएं</span>
                    <span class="lang-pa">ਪੜ੍ਹ ਕੇ ਸੁਣਾਓ</span>
                `;
            } else {
                readFullPage();
            }
        }

        function readAloud(element) {
            if (speechSynthesis.speaking) {
                speechSynthesis.cancel();
                return;
            }

            const textContent = getVisibleText(element);
            if (textContent.trim()) {
                const utterance = new SpeechSynthesisUtterance(textContent);
                utterance.lang = getVoiceLanguage(currentLanguage);
                utterance.rate = 0.9;
                utterance.pitch = 1;
                
                utterance.onstart = () => {
                    element.classList.add('reading-highlight');
                };
                
                utterance.onend = () => {
                    element.classList.remove('reading-highlight');
                };
                
                speechSynthesis.speak(utterance);
            }
        }

        function readFullPage() {
            const mainContent = document.getElementById('main-content');
            const textContent = getVisibleText(mainContent);
            
            if (textContent.trim()) {
                isReading = true;
                document.querySelector('.read-aloud-btn').innerHTML = `
                    <i class="fas fa-stop"></i>
                    <span class="lang-en">Stop Reading</span>
                    <span class="lang-hi">पढ़ना बंद करें</span>
                    <span class="lang-pa">ਪੜ੍ਹਨਾ ਬੰਦ ਕਰੋ</span>
                `;
                
                const utterance = new SpeechSynthesisUtterance(textContent);
                utterance.lang = getVoiceLanguage(currentLanguage);
                utterance.rate = 0.8;
                
                utterance.onend = () => {
                    isReading = false;
                    document.querySelector('.read-aloud-btn').innerHTML = `
                        <i class="fas fa-volume-up"></i>
                        <span class="lang-en">Read Aloud</span>
                        <span class="lang-hi">पढ़कर सुनाएं</span>
                        <span class="lang-pa">ਪੜ੍ਹ ਕੇ ਸੁਣਾਓ</span>
                    `;
                };
                
                speechSynthesis.speak(utterance);
            }
        }

        function getVisibleText(element) {
            const langElements = element.querySelectorAll(`[class*="lang-${currentLanguage}"]`);
            let text = '';
            
            if (langElements.length > 0) {
                langElements.forEach(el => {
                    if (el.style.display !== 'none') {
                        text += el.textContent + ' ';
                    }
                });
            } else {
                // Fallback to all visible text
                const walker = document.createTreeWalker(
                    element,
                    NodeFilter.SHOW_TEXT,
                    null,
                    false
                );
                
                let node;
                while (node = walker.nextNode()) {
                    const parent = node.parentElement;
                    if (parent && !parent.classList.contains('d-none') && 
                        getComputedStyle(parent).display !== 'none') {
                        text += node.textContent + ' ';
                    }
                }
            }
            
            return text.replace(/\s+/g, ' ').trim();
        }

        function getVoiceLanguage(lang) {
            const langMap = {
                'en': 'en-IN',
                'hi': 'hi-IN',
                'pa': 'pa-IN'
            };
            return langMap[lang] || 'en-IN';
        }

        // Voice Search Functions
        function startVoiceSearch() {
            if (!('webkitSpeechRecognition' in window)) {
                showNotification('Voice search not supported in this browser', 'error');
                return;
            }

            const recognition = new webkitSpeechRecognition();
            recognition.continuous = false;
            recognition.interimResults = false;
            recognition.lang = getVoiceLanguage(currentLanguage);

            const voiceBtn = event.target.closest('.voice-search-btn');
            voiceBtn.classList.add('voice-listening');
            isListening = true;

            recognition.onstart = () => {
                announceToScreenReader('Voice search started. Please speak now.');
            };

            recognition.onresult = (event) => {
                const result = event.results[0][0].transcript;
                document.getElementById('globalSearch').value = result;
                performSearch(result);
                announceToScreenReader(`Searching for: ${result}`);
            };

            recognition.onerror = () => {
                showNotification('Voice search error. Please try again.', 'error');
            };

            recognition.onend = () => {
                voiceBtn.classList.remove('voice-listening');
                isListening = false;
            };

            recognition.start();
        }

