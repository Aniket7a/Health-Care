<div>Gender: <%= patient.gender %> | Blood: <%= patient.bloodGroup %> | Age: <%= patient.age ?? '-' %></div>
<hr/>
<% visits.forEach(v=> { %>
  <div class="item">
    <strong><%= moment(v.visitDate).format("DD/MM/YYYY") %></strong> â€” <%= v.doctorName %> (<%= v.department %>)<br/>
    <%= v.summary || '' %>
  </div>
<% }) %>
<script>window.print()</script>
</body></html>
