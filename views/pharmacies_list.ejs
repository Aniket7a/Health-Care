  <!-- Main Content -->
  <main class="container mx-auto p-4 sm:p-6 lg:p-8">
    <h1 id="page-title" class="text-2xl font-bold text-gray-900 mb-6 text-center">
      Find Your Nearest Ayuvaani Pharmacy Store
    </h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Left: Search + List -->
      <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col space-y-4">
        <div class="relative">
          <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          <input id="search-placeholder" type="text"
                 placeholder="Search from 100+ Stores all over India"
                 class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <% if (pharmacies.length === 0) { %>
          <p id="no-pharmacies" class="text-center text-gray-500 italic text-lg mt-4">No pharmacies found.</p>
        <% } else { %>
          <ul class="space-y-4 overflow-y-auto max-h-[400px]">
            <% pharmacies.forEach(pharmacy => { %>
              <li class="bg-gray-50 rounded-lg p-4 transition duration-300 hover:bg-gray-100 border border-gray-200">
                <div class="flex items-start space-x-3">
                  <i class="fas fa-store text-blue-600 text-lg mt-1"></i>
                  <div class="min-w-0">
                    <h3 class="text-lg font-semibold truncate"><%= pharmacy.name %></h3>
                    <p class="text-sm text-gray-600 mt-1"><%= pharmacy.address %></p>
                    <p class="text-sm text-gray-500 mt-1">
                      <span id="status-label">Status:</span>
                      <% if (pharmacy.isOpen) { %>
                        <span class="text-green-600 font-semibold" id="status-open">Open</span>
                      <% } else { %>
                        <span class="text-red-600 font-semibold" id="status-closed">Closed</span>
                      <% } %>
                    </p>
                  </div>
                </div>

                <!-- View buttons -->
                <div class="mt-4 flex flex-wrap gap-2">
                  <a href="/pharmacy/<%= pharmacy._id %>"
                     id="view-shop"
                     class="inline-flex items-center justify-center px-4 py-2 rounded-lg bg-slate-700 text-white hover:bg-slate-800">
                    View Shop
                  </a>
                  <a href="/pharmacy/<%= pharmacy._id %>/medicines"
                     id="view-medicines"
                     class="inline-flex items-center justify-center px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
                    View Medicines
                  </a>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Right: Map -->
      <div class="relative bg-gray-200 rounded-2xl shadow-lg overflow-hidden flex items-center justify-center p-4">
        <iframe
          id="pharmacy-map"
          src="https://www.google.com/maps?q=30.3755,76.1431&hl=en&z=14&output=embed"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-[500px] rounded-xl">
        </iframe>
      </div>
    </div>
  </main>

