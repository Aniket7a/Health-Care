  <div class="footer">
    <p>Ayuvani Virtual Health Platform &copy; 2023 | Secure & Private</p>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const domain = "meet.jit.si";
      const roomName = "<%= room %>";  // dynamic from query
      
      const options = {
        roomName: roomName,
        width: "100%",
        height: "100%",
        parentNode: document.getElementById("jitsi-container"),
        userInfo: {
          displayName: "Doctor/Patient"
        },
        configOverwrite: {
          startWithAudioMuted: false,
          startWithVideoMuted: false,
          prejoinPageEnabled: false,
          disableModeratorIndicator: false,
          startScreenSharing: false,
          enableEmailInStats: false,
          enableWelcomePage: false
        },
        interfaceConfigOverwrite: {
          SHOW_JITSI_WATERMARK: false,
          SHOW_WATERMARK_FOR_GUESTS: false,
          SHOW_BRAND_WATERMARK: false,
          SHOW_POWERED_BY: false,
          TOOLBAR_BUTTONS: [
            'microphone', 'camera', 'closedcaptions', 'desktop', 'fullscreen',
            'fodeviceselection', 'hangup', 'profile', 'chat', 'recording',
            'livestreaming', 'etherpad', 'sharedvideo', 'settings', 'raisehand',
            'videoquality', 'filmstrip', 'invite', 'feedback', 'stats', 'shortcuts',
            'tileview', 'videobackgroundblur', 'download', 'help', 'mute-everyone',
            'security'
          ]
        }
      };
      
      const api = new JitsiMeetExternalAPI(domain, options);
      
      // Handle responsive adjustments
      function handleResize() {
        if (window.innerWidth < 768) {
          // Mobile adjustments
          api.executeCommand('toggleFilmstrip');
        }
      }
      
      // Handle end call button
      document.querySelector('.end-call').addEventListener('click', function() {
        if (confirm("Are you sure you want to end the consultation?")) {
          api.executeCommand('hangup');
          setTimeout(() => {
            window.close() || window.history.back();
          }, 1000);
        }
      });
      
      window.addEventListener('resize', handleResize);
      handleResize(); // Initial call
      
      // Make Jitsi video the main focus by adjusting its interface
      setTimeout(() => {
        // Hide some Jitsi UI elements to maximize video space
        try {
          api.executeCommand('toggleFilmstrip'); // Toggle to ensure proper initial state
          
          // On mobile, we want the filmstrip hidden by default
          if (window.innerWidth < 768) {
            setTimeout(() => api.executeCommand('toggleFilmstrip'), 1000);
          }
        } catch (e) {
          console.log("Jitsi API commands not available yet");
        }
      }, 3000);
    });
  </script>
  <script>
    // Prescription sharing (simple local version)
const prescriptionInput = document.getElementById("prescription-input");
const prescriptionDisplay = document.getElementById("prescription-display");
const saveBtn = document.getElementById("save-prescription");

saveBtn.addEventListener("click", () => {
  const text = prescriptionInput.value.trim();
  if (text.length > 0) {
    prescriptionDisplay.innerHTML = "<strong>Prescription:</strong><br>" + text.replace(/\n/g, "<br>");
    prescriptionInput.value = "";
  } else {
    alert("Please write something before saving.");
  }
});

  </script>
